<templateSet group="Blade Template">
  <template name="fo" value="{!! Form::open($END$) !!}" description="Open a Form" toReformat="false" toShortenFQNames="true">
    <context>
      <option name="HTML_TEXT" value="true" />
      <option name="HTML" value="true" />
      <option name="XSL_TEXT" value="false" />
      <option name="XML" value="false" />
      <option name="JSP" value="false" />
      <option name="CSS_PROPERTY_VALUE" value="false" />
      <option name="CSS_DECLARATION_BLOCK" value="false" />
      <option name="CSS_RULESET_LIST" value="false" />
      <option name="CSS" value="false" />
      <option name="CUCUMBER_FEATURE_FILE" value="false" />
      <option name="JAVA_SCRIPT" value="false" />
      <option name="TypeScript" value="false" />
      <option name="HAML" value="false" />
      <option name="CoffeeScript" value="false" />
      <option name="OTHER" value="false" />
    </context>
  </template>
  <template name="fc" value="{!! Form::close() !!}" description="Close a Form" toReformat="false" toShortenFQNames="true">
    <context>
      <option name="HTML_TEXT" value="true" />
      <option name="HTML" value="true" />
      <option name="XSL_TEXT" value="false" />
      <option name="XML" value="false" />
      <option name="JSP" value="false" />
      <option name="CSS_PROPERTY_VALUE" value="false" />
      <option name="CSS_DECLARATION_BLOCK" value="false" />
      <option name="CSS_RULESET_LIST" value="false" />
      <option name="CSS" value="false" />
      <option name="CUCUMBER_FEATURE_FILE" value="false" />
      <option name="JAVA_SCRIPT" value="false" />
      <option name="TypeScript" value="false" />
      <option name="HAML" value="false" />
      <option name="CoffeeScript" value="false" />
      <option name="OTHER" value="false" />
    </context>
  </template>
  <template name="textfield" value="&lt;!-- $CAPNAME$ Field --&gt;&#10;&lt;div class=&quot;form-group&quot;&gt;&#10;    {!! Form::label('$NAME$', '$CAPNAME$:') !!}&#10;    {!! Form::text('$NAME$', null, ['class' =&gt; 'form-control']) !!}&#10;&lt;/div&gt;" description="Insert a text field with label" toReformat="false" toShortenFQNames="true">
    <variable name="NAME" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="CAPNAME" expression="capitalize(NAME)" defaultValue="" alwaysStopAt="false" />
    <context>
      <option name="HTML_TEXT" value="true" />
      <option name="HTML" value="true" />
      <option name="XSL_TEXT" value="false" />
      <option name="XML" value="false" />
      <option name="JSP" value="false" />
      <option name="CSS_PROPERTY_VALUE" value="false" />
      <option name="CSS_DECLARATION_BLOCK" value="false" />
      <option name="CSS_RULESET_LIST" value="false" />
      <option name="CSS" value="false" />
      <option name="CUCUMBER_FEATURE_FILE" value="false" />
      <option name="JAVA_SCRIPT" value="false" />
      <option name="TypeScript" value="false" />
      <option name="HAML" value="false" />
      <option name="CoffeeScript" value="false" />
      <option name="OTHER" value="false" />
    </context>
  </template>
  <template name="passwordfield" value="&lt;!-- $CAPNAME$ Field --&gt;&#10;&lt;div class=&quot;form-group&quot;&gt;&#10;    {!! Form::label('$NAME$', '$CAPNAME$:') !!}&#10;    {!! Form::password('$NAME$', ['class' =&gt; 'form-control']) !!}&#10;&lt;/div&gt;" description="Insert a password field with label" toReformat="false" toShortenFQNames="true">
    <variable name="NAME" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="CAPNAME" expression="capitalize(NAME)" defaultValue="" alwaysStopAt="false" />
    <context>
      <option name="HTML_TEXT" value="true" />
      <option name="HTML" value="true" />
      <option name="XSL_TEXT" value="false" />
      <option name="XML" value="false" />
      <option name="JSP" value="false" />
      <option name="CSS_PROPERTY_VALUE" value="false" />
      <option name="CSS_DECLARATION_BLOCK" value="false" />
      <option name="CSS_RULESET_LIST" value="false" />
      <option name="CSS" value="false" />
      <option name="CUCUMBER_FEATURE_FILE" value="false" />
      <option name="JAVA_SCRIPT" value="false" />
      <option name="TypeScript" value="false" />
      <option name="HAML" value="false" />
      <option name="CoffeeScript" value="false" />
      <option name="OTHER" value="false" />
    </context>
  </template>
  <template name="submitfield" value="&lt;!-- $CAPNAME$ Field --&gt;&#10;&lt;div class=&quot;form-group&quot;&gt;&#10;    {!! Form::submit('$NAME$', ['class' =&gt; 'btn btn-primary']) !!}&#10;&lt;/div&gt;" description="Insert a submit button" toReformat="false" toShortenFQNames="true">
    <variable name="NAME" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="CAPNAME" expression="capitalize(NAME)" defaultValue="" alwaysStopAt="false" />
    <context>
      <option name="HTML_TEXT" value="true" />
      <option name="HTML" value="true" />
      <option name="XSL_TEXT" value="false" />
      <option name="XML" value="false" />
      <option name="JSP" value="false" />
      <option name="CSS_PROPERTY_VALUE" value="false" />
      <option name="CSS_DECLARATION_BLOCK" value="false" />
      <option name="CSS_RULESET_LIST" value="false" />
      <option name="CSS" value="false" />
      <option name="CUCUMBER_FEATURE_FILE" value="false" />
      <option name="JAVA_SCRIPT" value="false" />
      <option name="TypeScript" value="false" />
      <option name="HAML" value="false" />
      <option name="CoffeeScript" value="false" />
      <option name="OTHER" value="false" />
    </context>
  </template>
  <template name="newview" value="@extends('layouts.default')&#10;&#10;@section('content')&#10;    $END$&#10;@stop" description="Create new view with boilerplate" toReformat="false" toShortenFQNames="true">
    <context>
      <option name="HTML_TEXT" value="true" />
      <option name="HTML" value="true" />
    </context>
  </template>
  <template name="newform" value="{!! Form::open() !!}&#10;    $END$&#10;{!! Form::close() !!}" description="Create new Blade Form" toReformat="false" toShortenFQNames="true">
    <context>
      <option name="HTML_TEXT" value="true" />
      <option name="HTML" value="true" />
    </context>
  </template>
  <template name="errors" value="@if ($errors-&gt;any())&#10;    &lt;ul class=&quot;alert alert-danger&quot;&gt;&#10;        @foreach ($errors-&gt;all() as $error)&#10;            &lt;li&gt;{{ $error }}&lt;/li&gt;&#10;        @endforeach&#10;    &lt;/ul&gt;&#10;@endif" description="Laravel Errors" toReformat="false" toShortenFQNames="true">
    <context>
      <option name="HTML_TEXT" value="true" />
      <option name="HTML" value="true" />
    </context>
  </template>
</templateSet>